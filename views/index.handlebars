<div class="container mt-4">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6" id="addBurger">
            <form>
                <div class="mb-3">
                    <label for="burgerInput" class="form-label">Add a burger to devour!</label>
                    <input type="text" class="form-control" id="burgerInput">
                </div>
                <button type="submit" class="btn btn-primary" id="submit">Submit</button>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row mt-4">
        <div class="col-5">
            <div class="row h2 burger-header justify-content-center">Burgers To Devour</div>
            <div class="row">
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="row h2 burger-footer text-center">_</div>
        </div>
        <div class="col-2"></div>
        <div class="col-5 class="burger">
            <div class="row h2 burger-header justify-content-center">Burgers I've Eaten</div>
            <div class="row">
                <ul class="list-group">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
            <div class="row h2 burger-footer text-center">_</div>
        </div>
    </div>

</div>